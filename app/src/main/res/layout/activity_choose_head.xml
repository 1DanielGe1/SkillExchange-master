<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/headLayout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorPrimarySme"
            app:cardCornerRadius="6dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_head1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:onClick="onClick1"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorPrimarySme"
            app:cardCornerRadius="6dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_head2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:onClick="onClick2"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorPrimarySme"
            app:cardCornerRadius="6dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_head3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:onClick="onClick3"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorPrimarySme"
            app:cardCornerRadius="6dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_head4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:onClick="onClick4"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorPrimarySme"
            app:cardCornerRadius="6dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_head5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:onClick="onClick5"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v7.widget.CardView>